<h1>メインページ</h1>
<p>Title</p><p>Body</p>
<% @book.each do |book| %>
<span><%= book.title %></span>
<span><%= book.body %></span>
<%= link_to "show", show_room_path(book.id) %>
<%= link_to "edit", edit_room_path(book.id) %>
<%= link_to "destroy", destroy_book_path(book.id), method: :delete %>

<% end %>



<h1>New book </h1>
<%= form_with model:@book, url:'/books',local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>