<h1>Editing Book</h1>


<h1>編集画面</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '保存' %>
  <%= link_to "show", show_room_path(@book.id) %>
  <%= link_to "back", main_page_path %>
<%= link_to "destroy", destroy_book_path, method: :delete %>


<% end %>